{
    "id": "ibm.devops.services.pipeline.tryout_dra_simple_test",
    "version": 1,
    "name_key": "ExtName",
    "desc_key": "ExtDesc",
    "extension_type": "Deploy",
    "message_key": "ExtMessage",
	"inputs": [
        {
            "type": "Bluemix",
            "inclusion" : "always"
        }
    ],
    "params": [
        {
            "name": "PROJECT_KEY",
            "type": "Secure",
            "required": "true",
            "default_value": "",
            "label_key": "PROJECT_KEY_KEY",
            "desc_key": "PROJECT_KEY_DESC"
        },
        
        {
            "name": "SERVICE_LIST",
            "type": "Text",
            "required": "false",
            "default_value": "",
            "label_key": "SERVICE_LIST_KEY",
            "desc_key": "SERVICE_LIST_DESC"
        },
        
        {
            "name": "COMMAND",
            "type": "TextArea",
            "required": "true",
            "default_value" : "#!/bin/bash",
            "label_key": "COMMAND_KEY",
            "desc_key": "COMMAND_DESC"
        }
    ],
    "outputs": [
        {
            "type": "Artifacts",
            "inclusion" : "always"
        },
        {
            "type": "Tests",
            "inclusion": "optional"
        }
    ],
    "execution": {
        "type": "JenkinsDocker",
        "shell": "#!/bin/bash

set +x
set +e 

        
export DRA_PROJECT_KEY=#PROJECT_KEY#
export DRA_SERVICE_LIST=\"#SERVICE_LIST#\"
        
#check for defined host/port, if null set defaults
if [ -z \"$HOST\" ]; then
    export HOST=ondemand.saucelabs.com
fi
        
if [ -z \"$PORT\" ]; then
    export PORT=80
fi

function custom_cmd {
    eval #COMMAND#
    RESULT=$?

    if [ $RESULT -ne 0 ]; then
        exit 1
    fi
}
    
export -f custom_cmd

. $EXT_DIR/execute.sh
RESULT=$?
        
if [ $RESULT -ne 0 ]; then
    exit 1
fi
    "},
    "project": "https://hub.jazz.net/project/alchemy/Alchemy-Ostanes",
    "project_example": "https://hub.jazz.net/pipeline/Osthanes/blazemeter_static",
    "project_contact": "vjegase@us.ibm.com"
}
